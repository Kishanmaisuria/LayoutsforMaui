<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutsforMaui.Pages.StackLayoutD"
             Title="Stack Layout">
    <ScrollView Orientation="Vertical">
        <StackLayout Padding="20" Spacing="10" Orientation="Vertical">
            <Label Text="Hamburger Stacker Layout" FontSize="30" FontAttributes="Bold" Margin="30"/>
            
            <Button x:Name="SLD1" Text="Veritcal Stack Page" Clicked="SLD1_Clicked"/>
            <Button x:Name="SLD2" Text="Herizontal stack Page" Clicked="SLD2_Clicked"/>
            <Button x:Name="SLD3" Text="Grid Page" Clicked="SLD3_Clicked"/>

        </StackLayout>
    </ScrollView>

    
</ContentPage>